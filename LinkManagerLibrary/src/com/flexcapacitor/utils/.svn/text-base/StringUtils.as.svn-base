package com.flexcapacitor.utils
{
	public class StringUtils
	{
		public function StringUtils()
		{
		}
		
		/**
		 * Adds a white space charater at the end of the string until it contains the character length specified
		 * */
		public static function pad(value:String, length:int):String {
			var valueLength:int = value ? value.length : 0;
			for (var i:int=valueLength;i<length;i++) {
				value+=" "
			}
			return value;
		}
	}
}